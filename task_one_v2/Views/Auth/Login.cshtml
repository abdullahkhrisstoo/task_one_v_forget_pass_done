@model UserLogin

@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using task_one_v2.ViewModel


@{
    Layout = ConstantApp.authLayout;
}

@inject IViewLocalizer localizer
<h4>@localizer["Hello! let's get started"]</h4>
<h6 class="font-weight-light">@localizer["Sign in to continue."]</h6>

<form class="pt-3" asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Email" class="form-control form-control-lg" placeholder=@Html.DisplayNameFor(m=>m.Email)>
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control form-control-lg" placeholder=@Html.DisplayNameFor(m=>m.Password)>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">@localizer["SIGN IN"]</button>
    </div>

    <div class="my-2 d-flex justify-content-between align-items-center">
        <div class="form-check">
            <label class="form-check-label text-muted">
                <input type="checkbox" class="form-check-input" name="isKeep">
                @localizer["Keep me signed in"]
            </label>
        </div>
        <a href="#" class="auth-link text-black">@localizer["Forgot password?"]</a>
    </div>
    <div class="mb-2">
        <a  asp-controller="Auth" asp-action="ExternalLogin" asp-route-provider="Google">Google</a>

        <button type="button" class="btn btn-block btn-facebook auth-form-btn">

            <i class="ti-facebook mr-2"></i>@localizer["Connect using facebook"]
        </button>
    </div>
    <div class="text-center mt-4 font-weight-light">
        @localizer["Don't have an account?"] <a asp-action="Register" class="text-primary">@localizer["Create"]</a>
    </div>
</form>
