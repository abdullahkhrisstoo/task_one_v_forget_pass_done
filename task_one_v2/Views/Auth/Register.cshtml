

@model UserDataRegisterViewModel
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using task_one_v2.App_Core.ConstString
@using task_one_v2.ViewModel

@inject IViewLocalizer localizer

@{
    Layout = ConstantApp.authLayout;
}


<form asp-action="Register" class="pt-3">

    <h4>@localizer["New here?"]</h4>
    <h6>@localizer["Signing up is easy. It only takes a few steps"]</h6>

        <div class="form-group">
            <input asp-for="FirstName" class="form-control form-control-lg" placeholder="@Html.DisplayNameFor(m=>m.FirstName)" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

         <div class="form-group">
            <input asp-for="LastName" class="form-control form-control-lg" placeholder="@Html.DisplayNameFor(m=>m.LastName)" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    <div class="form-group">
        <input asp-for="Email" class="form-control form-control-lg" placeholder="@Html.DisplayNameFor(m=>m.Email)" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control form-control-lg" placeholder=@Html.DisplayNameFor(m=>m.Password) />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    
    
   

    <div class="mb-4">
        <div class="form-check">
            <label class="form-check-label text-muted">
                <input asp-for="IsChef" type="checkbox" class="form-check-input">
                @localizer["Register as a chef"]
            </label>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">@localizer["SIGN UP"]</button>
    </div>
    <div class="text-center mt-4 font-weight-light">
        @localizer["Already have an account?"]<a asp-action="Login" class="text-primary">@localizer["Login"]</a>
    </div>
</form>
