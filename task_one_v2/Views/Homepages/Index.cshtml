@model IEnumerable<task_one_v2.Models.Homepage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Backgroundimage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatarimage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Backgroundimage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avatarimage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Homepageid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Homepageid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Homepageid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
