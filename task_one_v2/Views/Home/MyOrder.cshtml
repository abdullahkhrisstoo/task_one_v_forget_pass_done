@model List<RecipeOrder>
@using Microsoft.AspNetCore.Html
@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    Layout = ConstantApp.homeLayout;
}


<div class="container m-5 p-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
        @{
            if (Model.Count == 0)
            {
                <div class="alert alert-danger">No order found .</div>
            }
            else
            {
                @foreach (var ro in Model)
                {
                    <div class="col">
                        <div class="card px-2 mb-4" style="height: 600;">
                            <div class="card-header bg-white">

                                <div class="row justify-content-between">
                                    <div class="col">
                                        <p class="text-muted"> @localizer["Order ID"]  <span class="font-weight-bold text-dark">@ro.OrderId</span></p>
                                        <p class="text-muted"> @localizer["Date"] <span class="font-weight-bold text-dark">@ro.OrderDate</span> </p>
                                        <p class="text-muted"> Chef <span class="font-weight-bold text-dark">@ro.Recipe?.Chef?.FirstName @ro.Recipe?.Chef?.LastName</span> </p>
                                        <p class="text-muted"> Category <span class="font-weight-bold text-dark"> @ro.Recipe?.Category?.CategoryName</span> </p>

                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                
                               
                                <div class="media flex-column flex-sm-row">
                                    <img class="align-self-center img-fluid mb-3 mb-sm-0" src="@Url.Content(ConstantApp.wwwImgPath + ro.Recipe.ImageRecipe)" width="180" height="180" alt="Recipe Image">
                                    <div class="media-body ml-sm-3">
                                        <h5 class="font-weight-bold">@ro?.Recipe?.Recipename</h5>
                                        <h4 class="mt-3 mb-4 font-weight-bold">$@ro?.Recipe?.Price</h4>

                                        <div class="row">
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>

                           
                                   
                        </div>
                    </div>

                }
            }
        }
    </div>
</div>



