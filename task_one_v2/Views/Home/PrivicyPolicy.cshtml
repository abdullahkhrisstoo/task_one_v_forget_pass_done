@using Microsoft.AspNetCore.Html
@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using task_one_v2.App_Core.StateMangement
@inject IViewLocalizer localizer
@{
    Layout = ConstantApp.homeLayout;

}

<div class="py-5 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">@localizer["Privacy Policy"]</h1>
        
    </div>
</div>

<div class="py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">@localizer["Place Policy header"]</h5>
        </div>
        <div class="text-center">
            <h6 class="section-title text-center text-primary ">@localizer["Privicy Policy Body"]</h6>
        </div>
    </div>
</div>


