@model IEnumerable<Category>
@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    Layout = ConstantApp.adminLayout;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}



<div class="container">
    <div class="row">
        <div class="col">
            <p>
                <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">@localizer["Create Category"]</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@localizer["Category"]</th>
                        <th>@localizer["category img"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryName</td>
                            <td>
                                <img src="@Url.Content(ConstantApp.wwwImgPath + category.ImageCategory)" alt="@category.CategoryName" style="height: 150px; width: 150px;" />
                            </td>

                            <td>
                                <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm" onclick="return confirm('@localizer["Are you sure you want to delete this category?"]')">
                                    <i class="mdi mdi-delete-forever"></i> @localizer["Delete"]
                                </a>
                                <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-primary btn-sm">
                                    <i class="mdi mdi-pencil"></i> @localizer["Edit"]
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
