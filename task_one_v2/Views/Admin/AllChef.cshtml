@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer


@{
    List<UserInfo> allChef = ViewBag.AllChef;
    Layout = ConstantApp.adminLayout;
}



<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />


<div class="grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@localizer["All Chefs"]</h4>
          
            <div class="table-responsive">
                <table class="table" id="example" >
                    <thead>
                        <tr>
                            <th>
                                @localizer["Full Name"]
                            </th>
                            <th>
                                @localizer["Email"]

                            </th>
                            <th>
                                @localizer["NATIONALITY"]
                            </th>
                            <th>
                                @localizer["Status"]
                            </th>
                            <th>
                                @localizer["Personal Image"]
                            </th>
                            <th>
                                @localizer["Certificate Image"]
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in allChef)
                        {
                            <tr>
                                <td>
                                    @item.FirstName  @item.LastName
                                </td>
                                <td>
                                    @foreach (var credential in item.UserCredentials)
                                    {
                                        @credential.Email
                                    }
                                </td>
                                <td>
                                    @item.Nationality
                                </td>                          
                                <td>
                                    <label class="badge
                                     @{
                                       if(item.VerificationStatus.VerificationStatusId == ConstantApp.approvedChef)
                                       {
                                          <text>badge-success</text>
                                       }
                                       else if(item.VerificationStatus.VerificationStatusId == ConstantApp.pendingChef)
                                       {
                                         <text>badge-warning</text>
                                       }
                                        else
                                       {
                                         <text>badge-danger</text>
                                       }
                                      }">
                                      @item.VerificationStatus.StatusName.ToLower()</label>
                                </td>
                                <td>
                                    @* <!-- User image --> *@
                                    <a href="@Url.Content(ConstantApp.wwwImgPath + item.Image)" target="_blank">
                                        <img src="@Url.Content(ConstantApp.wwwImgPath + item.Image)" alt="User Image" width="200" height="200">
                                    </a>
                                </td>
                                <td>
                                    @* <!-- Certificate image --> *@
                                    <a href="@Url.Content(ConstantApp.wwwImgPath + item.CertificateImage)" target="_blank">
                                        <img src="@Url.Content(ConstantApp.wwwImgPath + item.CertificateImage)" alt="Certificate Image" width="200" height="200">
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="EditChefStatus" asp-route-id="@item.Userid">@localizer["Details"]</a>
                                </td>
                            </tr>
                        }          
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>
