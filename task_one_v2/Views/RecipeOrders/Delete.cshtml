@model RecipeOrder
@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    Layout = ConstantApp.adminLayout;
}
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />


<h3>@localizer["Are you sure you want to delete this?"]</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            @localizer["Date"]
        </dt>
        <dd class = "col-sm-10">
           @Model.OrderDate
        </dd>
        <dt class = "col-sm-2">
            @localizer["Recipe Name"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Recipe.Recipename
        </dd>
        <dt class = "col-sm-2">
            @localizer["Customer Name"]
        </dt>
        <dd class="col-sm-10">
            @Model.User.FirstName  @Model.User.LastName
        </dd>

        <dt class="col-sm-2">
            @localizer["Price"]
        </dt>
        <dd class="col-sm-10">
            @Model.Recipe.Price
        </dd>

        <dt class="col-sm-2">
            @localizer["Description"]
        </dt>
        <dd class="col-sm-10">
            @Model.Recipe.Description
        </dd>

        <dt class="col-sm-2">
            @localizer["Ingredients"]
        </dt>
        <dd class="col-sm-10">
            @Model.Recipe.Ingredients
        </dd>

        <dt class="col-sm-2">
            @localizer["Steps"]
        </dt>
        <dd class="col-sm-10">
            @Model.Recipe.Procedure
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <button type="submit" value="Delete" class="btn btn-danger">@localizer["delete"]</button>
    </form>
</div>
