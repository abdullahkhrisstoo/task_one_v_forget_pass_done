@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@model Recipe


@inject IViewLocalizer localizer

@{
    Layout = ConstantApp.chefLayout;
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic form elements</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" asp-action="AddRecipe" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Recipename" class="control-label"></label>
                    <input asp-for="Recipename" class="form-control" />
                    <span asp-validation-for="Recipename" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Ingredients" class="control-label"></label>
                    <textarea asp-for="Ingredients" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                    <span asp-validation-for="Ingredients" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <label asp-for="Procedure" class="control-label"></label>
                    <textarea asp-for="Procedure" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                    <span asp-validation-for="Procedure" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>


                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
               


               
                <div class="form-group">
                    <label asp-for="ImageRecipeFile" class="control-label"></label>
                    <input asp-for="ImageRecipeFile" class="form-control" />
                    <span asp-validation-for="ImageRecipeFile" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>


