@model Testimonial
@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{
    Layout = ConstantApp.homeLayout;
}
<div class="container m-5 p-5">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CreateTestimonial" asp-controller="Testimonials">
                <div class="form-group">
                    <label asp-for="TestimonialText" class="control-label"></label>
                    <textarea asp-for="TestimonialText" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="TestimonialText" class="text-danger"></span>
                </div>
                @* hidden data *@
                <input type="hidden" asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" />
                <input type="hidden" asp-for="TestimonialText" class="form-control" />
                <input type="hidden" asp-for="Userimg" class="form-control" />
                <input type="hidden" asp-for="ApprovalStatusId" class="form-control" asp-items="ViewBag.ApprovalStatusId" />
                <input type="hidden" asp-for="DateTime" class="form-control" />
                @* end hidden data *@
                <div class="form-group">
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>