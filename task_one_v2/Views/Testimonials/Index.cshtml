                                <label class="badge
                                   @{
                                   if(item?.ApprovalStatus?.ApprovalStatusId == ConstantApp.approvedTestimonial)
                                   {
                                                  <text>badge-success</text>
                                       }
                                       else if(item?.ApprovalStatus?.ApprovalStatusId == ConstantApp.pendingTestimonial)
                                       {
                                                 <text>badge-warning</text>
                                       }
                                        else
                                       {
                                                 <text>badge-danger</text>
                                       }
                                      }">
                                    @item?.ApprovalStatus?.StatusName.ToLower()</label>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item?.TestimonialId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
