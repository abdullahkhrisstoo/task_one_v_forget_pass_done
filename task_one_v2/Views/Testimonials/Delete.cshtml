@model Testimonial

@using task_one_v2.App_Core.ConstString
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    Layout = ConstantApp.adminLayout;
}


 
<h3>@localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@localizer["testimonials"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @localizer["testimonials"]
        </dt>
        <dd class="col-sm-10">
            @Model.TestimonialText
        </dd>
        <dt class="col-sm-2">
            @localizer["CreationDate"]
        </dt>
        <dd class="col-sm-10">
            @Model.DateTime.?ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            @localizer["Personal Image"]
        </dt>
        <dd class="col-sm-10">
            <img style="max-width:150px; max-height:150px" src="@Url.Content(ConstantApp.wwwImgPath + Model.Userimg)" />
        </dd>
        <dt class="col-sm-2">
            @localizer["Full Name"]
        </dt>
        <dd class="col-sm-10">
            @Model.User.FirstName @Model.User.LastName
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TestimonialId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
